{
  "name": "doof",
  "version": "0.0.2",
  "description": "TypeScript-like language transpiler targeting C++, JavaScript, and VM bytecode",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "doof": "dist/cli.js"
  },
  "files": [
    "dist",
    "doof_runtime.cpp",
    "doof_runtime.h"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist build && echo 'Cleaned build artifacts'",
    "build:bin": "esbuild src/cli.ts --bundle --platform=node --target=node20 --outfile=build/doof --format=esm --external:source-map && chmod +x build/doof",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "transpile": "node dist/cli.js"
  },
  "keywords": [
    "typescript",
    "cpp",
    "transpiler",
    "compiler",
    "codegen"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew24601/doof.git"
  },
  "bugs": {
    "url": "https://github.com/andrew24601/doof/issues"
  },
  "homepage": "https://github.com/andrew24601/doof#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@types/source-map": "^0.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.8",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "source-map": "^0.7.6"
  }
}
